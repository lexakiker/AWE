<form action="" method="POST">
	<table class="left" width="400px" border="0" cellpadding="0" cellspacing="0">
		<tr style="margin-bottom: 10px;">
			<td width="192px"><div class="td-space">Имя администратора</div></td>
			<td width="208px"><div class="style-input"><input type="text" name="name" value="{name}"></div></td>
		</tr>
		<tr style="margin-bottom: 10px;">
			<td width="192px"><div class="td-space">Дата рождения</div></td>
			<td width="208px"><div class="style-input"><input type="text" name="birth" value="{birth}" placeholder="DD.MM.YYYY - это важно!"></div></td>
		</tr>
		<tr style="margin-bottom: 10px;">
			<td width="192px"><div class="td-space">Логин администратора</div></td>
			<td width="208px"><div class="style-input"><input type="text" name="username" value="{username}"></div></td>
		</tr>
		<tr style="margin-bottom: 10px;">
			<td width="192px"><div class="td-space">E-Mail администратора</div></td>
			<td width="208px"><div class="style-input"><input type="text" name="admin-mail" value="{admin-mail}"></div></td>
		</tr>
		<tr style="margin-bottom: 10px;">
			<td width="192px"><div class="td-space">Пароль администратора</div></td>
			<td width="208px"><div class="style-input"><input type="password" name="password"></div></td>
		</tr>
		<tr>
			<td width="192px"></td>
			<td width="208px"><button type="submit" name="goToFinish" class="button">Закончить</button></td>
		</tr>
	</table>
</form>